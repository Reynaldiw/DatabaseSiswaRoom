<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".ui.UpdateSiswaActivity">

    <EditText
        android:id="@+id/edt_namaSiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Siswa"
        android:layout_marginBottom="25dp"/>

    <EditText
        android:id="@+id/edt_umur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Umur Siswa"
        android:layout_marginBottom="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jenis Kelamin"/>

    <RadioGroup
        android:id="@+id/rg_jenisKelamin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp">

        <RadioButton
            android:id="@+id/rb_man"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Laki-Laki"/>

        <RadioButton
            android:id="@+id/rb_woman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Perempuan"/>

    </RadioGroup>

    <EditText
        android:id="@+id/edt_asalSiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Asal Siswa"
        android:layout_marginBottom="25dp"
        android:inputType="textMultiLine"
        android:lines="2"
        android:maxLines="3"
        android:gravity="top|left"/>

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Siswa"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="25dp"/>

    <Button
        android:id="@+id/btn_updateSiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/update"
        android:textColor="#fff"
        style="@style/Widget.AppCompat.Button.Colored" />

</LinearLayout>